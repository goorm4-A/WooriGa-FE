<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="10dp">


    <LinearLayout
        android:id="@+id/family_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_stroke"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/family_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rounded_background_gray"
            android:contentDescription="가족 그룹 이미지"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/family_title"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="A 가족 그룹"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/family_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Charcoal"
            android:text="10명"
            android:textSize="17sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:gravity="end"
        android:layout_marginHorizontal="30dp">
<!--
        <ImageButton
            android:id="@+id/member_image_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="멤버1"
            android:src="@drawable/ic_user_circle"
            android:background="@color/transparent"
            android:layout_marginEnd="10dp" />

        <ImageButton
            android:id="@+id/member_image_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="멤버2"
            android:src="@drawable/ic_user_circle"
            android:background="@color/transparent"
            android:layout_marginEnd="10dp" />
-->
        <ImageButton
            android:id="@+id/add_member_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/circle_black"
            android:contentDescription="멤버 추가 버튼"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</LinearLayout>